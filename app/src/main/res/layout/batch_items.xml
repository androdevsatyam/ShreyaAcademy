<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="@dimen/_188sdp"
        android:layout_height="wrap_content"

        >

        <androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/back_counthome"
            app:cardCornerRadius="@dimen/_9sdp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/_35sdp">

                <ImageView
                    android:id="@+id/ivBatch"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_80sdp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/noimage" />

                <com.shreya_scademy.app.utils.widgets.CustomTextBold
                    android:id="@+id/tvOffer"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginEnd="-15dp"
                    android:background="@drawable/back_shade_designmain"
                    android:gravity="center"
                    android:text="@string/OFFER"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_11sdp" />

                <LinearLayout
                    android:id="@+id/llPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ivBatch"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <com.shreya_scademy.app.utils.widgets.CustomTextBold
                        android:id="@+id/tvOfferPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_4sdp"
                        android:gravity="center"
                        android:textColor="@color/colorText"
                        android:textSize="@dimen/_12sdp" />

                    <com.shreya_scademy.app.utils.widgets.CustomSmallText
                        android:id="@+id/tvPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/_11sdp" />

                </LinearLayout>

                <com.shreya_scademy.app.utils.widgets.CustomSmallText
                    android:id="@+id/batchTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/llPrice"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginTop="-4dp"
                    android:layout_marginEnd="@dimen/_6sdp"
                    android:gravity="start"
                    android:singleLine="true"
                    android:textAlignment="viewStart"

                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/_13sdp" />

                <com.shreya_scademy.app.utils.widgets.CustomSmallText
                    android:id="@+id/batchSubTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/batchTitle"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginTop="-4dp"
                    android:layout_marginEnd="@dimen/_6sdp"
                    android:ellipsize="end"
                    android:gravity="start"
                    android:maxLines="1"
                    android:textAlignment="viewStart"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/_12sdp" />

                <RatingBar
                    android:id="@+id/ratingBar"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/batchSubTitle"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="20dp"
                    android:rating="3" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:id="@+id/btLogin"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/_6sdp"
            android:layout_marginBottom="@dimen/_9sdp"
            android:elevation="@dimen/_6sdp">


            <com.shreya_scademy.app.utils.widgets.CustomSmallText
                android:id="@+id/btnBuyNow"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_28sdp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/_9sdp"
                android:background="@drawable/back_shade_designmain"
                android:gravity="center"
                android:paddingLeft="@dimen/_1sdp"
                android:text="@string/BuyNow"
                android:textColor="@color/white"
                android:textSize="@dimen/_11sdp" />

        </RelativeLayout>

