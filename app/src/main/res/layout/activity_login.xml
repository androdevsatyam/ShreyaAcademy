<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgimg"
    android:fillViewport="true">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:paddingBottom="@dimen/_25sdp"
            android:orientation="vertical"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_140sdp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_18sdp"
                    android:src="@drawable/image_login" />


                <LinearLayout
                    android:id="@+id/llLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@drawable/login_back_grad"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:orientation="horizontal">

                        <com.shreya_scademy.app.utils.widgets.CustomTextBold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingEnd="@dimen/_5sdp"
                            android:text="@string/welcome"
                            android:textColor="@color/colorText"
                            android:textSize="@dimen/_18sdp"
                            android:textStyle="bold" />

                        <com.shreya_scademy.app.utils.widgets.CustomTextBold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/app_name"
                            android:textColor="#fe9d43"
                            android:textSize="@dimen/_18sdp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <com.shreya_scademy.app.utils.widgets.CustomSmallText
                        android:id="@+id/tvLogin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginTop="-2dp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:text="@string/Please_login_to_continue"
                        android:textColor="@color/colorText"
                        android:textSize="@dimen/_16sdp"
                        android:textStyle="bold" />

                    <com.shreya_scademy.app.utils.widgets.CustomSmallText
                        android:id="@+id/tvOrLoginWith"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_22sdp"
                        android:layout_marginTop="-2dp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:text="@string/orLoginWith"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/_16sdp"
                        android:textStyle="bold" />

                    <com.shreya_scademy.app.utils.widgets.CustomEditText
                        android:id="@+id/etUserName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_22sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_22sdp"
                        android:background="@drawable/login_edit_grad"
                        android:hint="@string/EnrollmentIdEmail"
                        android:paddingStart="20dp"
                        android:paddingTop="@dimen/_13sdp"
                        android:paddingEnd="20dp"
                        android:paddingBottom="@dimen/_13sdp"
                        android:singleLine="true"
                        android:textAlignment="viewStart"
                        android:textColor="@color/colorText"
                        android:textDirection="locale" />

                    <com.shreya_scademy.app.utils.widgets.CustomEditText
                        android:id="@+id/etPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_22sdp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="@dimen/_22sdp"
                        android:background="@drawable/login_edit_grad"
                        android:hint="@string/Password"
                        android:inputType="textPassword"
                        android:paddingStart="@dimen/_22sdp"
                        android:paddingTop="@dimen/_13sdp"
                        android:paddingEnd="@dimen/_22sdp"
                        android:paddingBottom="@dimen/_13sdp"
                        android:singleLine="true"
                        android:textAlignment="viewStart"
                        android:textColor="@color/colorText"
                        android:textDirection="locale" />

                    <com.shreya_scademy.app.utils.widgets.CustomSmallText
                        android:id="@+id/forgotPass"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:gravity="end"
                        android:text="@string/forgot_password"
                        android:textColor="@color/colorText"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold" />

                    <com.shreya_scademy.app.utils.widgets.CustomTextSemiBold
                        android:id="@+id/tvContactAdmin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginEnd="16dp"
                        android:visibility="gone" />

                    <RelativeLayout
                        android:id="@+id/btLogin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_17sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:background="@drawable/back_shade_designmain"
                        android:elevation="@dimen/_2sdp"
                        android:paddingLeft="@dimen/_24sdp"
                        android:paddingTop="@dimen/_6sdp"
                        android:paddingRight="@dimen/_24sdp"
                        android:paddingBottom="@dimen/_6sdp">


                        <com.shreya_scademy.app.utils.widgets.CustomSmallText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/LOGIN"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_13sdp" />

                    </RelativeLayout>


                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/btnPhoneSignIn"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:background="@drawable/back_shade_designmain_signin"
                        android:src="@drawable/ic_phone"
                        android:gravity="center"
                        android:padding="@dimen/_12sdp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_13sdp"
                        auto:layout_constraintBottom_toBottomOf="parent"
                        auto:layout_constraintEnd_toStartOf="@+id/btnGoogleSignIn"
                        auto:layout_constraintStart_toStartOf="parent"
                        auto:layout_constraintTop_toTopOf="parent"
                        auto:layout_constraintVertical_bias="0.0" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/btnGoogleSignIn"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:background="@drawable/back_shade_designmain_signin"
                        android:src="@drawable/ic_google"
                        android:gravity="center"
                        android:padding="@dimen/_12sdp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_13sdp"
                        auto:layout_constraintBottom_toBottomOf="@+id/btnPhoneSignIn"
                        auto:layout_constraintEnd_toStartOf="@+id/btnFacebookSignIn"
                        auto:layout_constraintStart_toEndOf="@+id/btnPhoneSignIn"
                        auto:layout_constraintTop_toTopOf="@+id/btnPhoneSignIn"
                        auto:layout_constraintVertical_bias="0.0" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/btnFacebookSignIn"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:background="@drawable/back_shade_designmain_signin"
                        android:src="@drawable/ic_facebook"
                        android:gravity="center"
                        android:padding="@dimen/_12sdp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_13sdp"
                        auto:layout_constraintBottom_toBottomOf="parent"
                        auto:layout_constraintEnd_toEndOf="parent"
                        auto:layout_constraintStart_toEndOf="@+id/btnGoogleSignIn"
                        auto:layout_constraintTop_toTopOf="@+id/btnGoogleSignIn"
                        auto:layout_constraintVertical_bias="0.0" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>


        </ScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <LinearLayout
        android:id="@+id/rlSignup"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_36sdp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/back_splash_grad">

        <LinearLayout
            android:id="@+id/btnSignIn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_19sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/_3sdp"
                android:src="@drawable/signin"
                auto:tint="@color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/Signup"
                android:textColor="@color/white" />
        </LinearLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/white" />

        <LinearLayout
            android:id="@+id/tvMove"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_19sdp"
                android:gravity="center"
                android:padding="@dimen/_1sdp"

                android:src="@drawable/ic_baseline_home_24"
                auto:tint="@color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_19sdp"
                android:gravity="center"
                android:text="Home"
                android:textColor="@color/white" />
        </LinearLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/white" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/loginTv"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:elevation="@dimen/_1sdp"
                android:gravity="center"
                android:padding="@dimen/_1sdp"
                android:src="@drawable/ic_baseline_login_24" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-1dp"
                android:gravity="center"
                android:text="@string/LOGIN"
                android:textColor="@color/white"

                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

